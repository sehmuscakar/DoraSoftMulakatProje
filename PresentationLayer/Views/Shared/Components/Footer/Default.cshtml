@model List<DataAccessLayer.Entities.ContactCompany>

<footer id="footer">
    @foreach (var item in Model)
    {

    <div class="footer-top">
        <div class="container">
            <div class="row">
              
              
                <div class="col-lg-3 col-md-6 footer-contact">
                    <h3>İletişim Bilgileri</h3>
                    <p>
                            <strong>Adres:</strong> @item.Address<br>
                            <hr/>
                            <br/>
                        <strong>Telefon:</strong>@item.Phone<br>
                            <br />
                            <hr />
                        <strong>Mail:</strong> @item.MailCity<br>
                        <hr/>
                    </p>
                </div>

                <div class="col-lg-2 col-md-6 footer-links">
                    <h4>Hızlı bağlantılar</h4>
                 <ul>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Anasayfa">Anasayfa</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/About">Hakkımızda</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Service">Hizmetler</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="/Home/Team">Takımımız</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="Home/Contact">İletişim</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 footer-links">
                    <h4>Anket Bağlantıları</h4>
                    <ul>
                        <li><i class="bx bx-chevron-right"></i> <a href="#">Anketi Doldur</a></li>
                        <li><i class="bx bx-chevron-right"></i> <a href="#">Tüm Anketleri Gör</a></li>
                 
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6 footer-newsletter">

                    <h5> <a href="/Home/Anasayfa" class="logo me-auto"><img src="~/Img/Logo.jpg" alt="" class="img-fluid" width="350" height="250"></a></h5>

                </div>

            </div>
        </div>
    </div>

    <div class="container d-md-flex py-4">

        <div class="me-md-auto text-center text-md-start">
            <div class="copyright">
                    &copy; Copyright @DateTime.Now.Year <strong><span>DoraSoft Araştırma ve Danışmanlık</span></strong>. Tüm Hakları Saklıdır.
            </div>
         
        </div>
        <div class="social-links text-center text-md-right pt-3 pt-md-0">
            <a href="@item.Twiter" class="twitter"><i class="bx bxl-twitter"></i></a>
            <a href="@item.Facebook" class="facebook"><i class="bx bxl-facebook"></i></a>
            <a href="@item.Instegram" class="instagram"><i class="bx bxl-instagram"></i></a>
            <a href="@item.Skype" class="google-plus"><i class="bx bxl-skype"></i></a>
            <a href="@item.Linkedin" class="linkedin"><i class="bx bxl-linkedin"></i></a>
        </div>
    </div>
    }
</footer>
             