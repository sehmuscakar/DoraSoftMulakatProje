@model IEnumerable<DataAccessLayer.Dtos.AdminDtos.PollListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Anket Liste Paneli</h3>
<br />
<p>
    <a class="btn btn-outline-success" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Anket No")
            </th>
            <th>
                @Html.DisplayName("Resim")
            </th>
            <th>
                @Html.DisplayName("Aktif olacağı Son Tarih")
            </th>
            <th>
                @Html.DisplayName("Anket Konusu")
            </th>
            <th>
                @Html.DisplayName("Anket Konusu Açıklama")
            </th>
            <th>
                @Html.DisplayName("Aktif Durumu")
            </th>
            <th>
                @Html.DisplayName("Kategori Adı")
            </th>
              <th>
                @Html.DisplayName("Rapor Numarası")
            </th>
            <th>
                @Html.DisplayName("Son Güncellenme")
            </th>
            <th>
                @Html.DisplayName("Sırası")
            </th>
            <th>
                @Html.DisplayName("Kim Ekledi")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
              <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    <img src="~/Img/@Html.DisplayFor(modelItem => item.ImageUrl)" alt="" class="form control" height="50" />
            </td>
              <td>
                @Html.DisplayFor(modelItem => item.LastTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PollCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PollReportId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedFullName)
            </td>
            <td>
                    <a class="btn btn-outline-danger" asp-action="Edit" asp-route-id="@item.Id">Güncelle</a>
                            <hr>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
