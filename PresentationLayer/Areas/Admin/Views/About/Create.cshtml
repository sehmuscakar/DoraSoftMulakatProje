@model DataAccessLayer.Entities.About

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Hakkımızda Ekleme Paneli</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.RowOrder" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubDescription1" class="control-label"></label>
                <input asp-for="SubDescription1" class="form-control" />
                <span asp-validation-for="SubDescription1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubDescription2" class="control-label"></label>
                <input asp-for="SubDescription2" class="form-control" />
                <span asp-validation-for="SubDescription2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title1" class="control-label"></label>
                <input asp-for="Title1" class="form-control" />
                <span asp-validation-for="Title1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title2" class="control-label"></label>
                <input asp-for="Title2" class="form-control" />
                <span asp-validation-for="Title2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleDescription1" class="control-label"></label>
                <input asp-for="TitleDescription1" class="form-control" />
                <span asp-validation-for="TitleDescription1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitleDescription2" class="control-label"></label>
                <input asp-for="TitleDescription2" class="form-control" />
                <span asp-validation-for="TitleDescription2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" type="file" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUserId" class="control-label"></label>
                <input asp-for="AppUserId" class ="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a class="btn btn-secondary" asp-action="Index">Listeye Geri Dön</a>
</div>