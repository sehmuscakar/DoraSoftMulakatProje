@model IEnumerable<DataAccessLayer.Dtos.AdminDtos.AboutListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Hakkımızda Liste Paneli</h3>
<br />
<p>
    <a class="btn btn-outline-success" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Hakkımızda Açıklama")
            </th>
            <th>
                @Html.DisplayName("Alt Açıklama 1")
            </th>
            <th>
                @Html.DisplayName("Alt Açıklama 2")
            </th>
            <th>
                @Html.DisplayName("Mizyon Title")
            </th>
            <th>
                @Html.DisplayName("Vizyon Title")
            </th>
            <th>
                @Html.DisplayName("Mizyon Açıklama")
            </th>
            <th>
                @Html.DisplayName("Vizyon Açıklama")
            </th>
            <th>
                @Html.DisplayName("Resim")
            </th>
             <th>
                @Html.DisplayName("Son Güncellenme")
            </th>
            <th>
                @Html.DisplayName("Sırası")
            </th>
            <th>
                @Html.DisplayName("Kim Ekledi")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubDescription1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubDescription2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitleDescription1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitleDescription2)
            </td>
            <td>
                    <img src="~/Img/@Html.DisplayFor(modelItem => item.ImageUrl)" alt="" class="form control" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedFullName)
            </td>
            <td>
                  <a class="btn btn-outline-danger" asp-action="Edit" asp-route-id="@item.Id">Güncelle</a>
                        <hr>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
