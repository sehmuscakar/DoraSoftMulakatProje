                <label asp-for="ManCount" class="control-label"></label>
                <input asp-for="ManCount" class="form-control" />
                <span asp-validation-for="ManCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WomenCount" class="control-label"></label>
                <input asp-for="WomenCount" class="form-control" />
                <span asp-validation-for="WomenCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WomenAvg" class="control-label"></label>
                <input asp-for="WomenAvg" class="form-control" />
                <span asp-validation-for="WomenAvg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManAvg" class="control-label"></label>
                <input asp-for="ManAvg" class="form-control" />
                <span asp-validation-for="ManAvg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PositiveCount" class="control-label"></label>
                <input asp-for="PositiveCount" class="form-control" />
                <span asp-validation-for="PositiveCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NegativeCount" class="control-label"></label>
                <input asp-for="NegativeCount" class="form-control" />
                <span asp-validation-for="NegativeCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Noİdea" class="control-label"></label>
                <input asp-for="Noİdea" class="form-control" />
                <span asp-validation-for="Noİdea" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UniversityDiplomad" class="control-label"></label>
                <input asp-for="UniversityDiplomad" class="form-control" />
                <span asp-validation-for="UniversityDiplomad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UniversityNot" class="control-label"></label>
                <input asp-for="UniversityNot" class="form-control" />
                <span asp-validation-for="UniversityNot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUserId" class="control-label"></label>
                <input asp-for="AppUserId" class ="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a class="btn btn-secondary" asp-action="Index">Listeye Geri Dön</a>
</div>
