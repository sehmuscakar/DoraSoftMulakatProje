@model DataAccessLayer.Entities.PollReport

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Anket Rapor Ekleme Paneli</h4>

<hr />
<div class="row">
